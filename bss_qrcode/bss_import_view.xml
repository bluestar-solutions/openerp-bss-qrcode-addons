<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
        
		<!-- Form view -->
		<record model="ir.ui.view" id="view_bss_qrcode_import_form">
	        <field name="name">Import</field>
	        <field name="model">bss_qrcode.import</field>
	        <field name="arch" type="xml">
	        	<form create="false" edit="false" string="Import" version="7.0">        	
		        	<sheet>
						<div class="oe_right oe_button_box" name="buttons" groups="base.group_user">
							<xpath expr="//div[@name='buttons']" position="inside">
			                    <button name="%(sale.act_res_partner_2_sale_order)d" type="action"
			                        string="Quotations and Sales"
			                        attrs="{'invisible': [('customer', '=', False)]}"
			                        groups="base.group_sale_salesman"/>
			                </xpath>
                        	 <button name="%(action_bss_qrcode_imported_document_form)d" string="All documents" type="action"
                        	 domain="[('status','=','Success')]" />
                        	 <button name="%(action_bss_qrcode_imported_document_form)d" string="All succeed documents" type="action"
                        	 context="{'status':'success'}" />
                    	</div>
                    	
						<div class="oe_title">							
							<label for="create_date"/> 
							<h3><field name="create_date"/></h3>
						</div>
						<field name="status" />
						<field name="imported_document_ids"/>
					</sheet>
				</form>
	        </field>
    	</record>
    
    	<!-- Tree view -->
		<record model="ir.ui.view" id="view_bss_qrcode_import_tree">
        	<field name="name">Import</field>
            <field name="model">bss_qrcode.import</field>
            <field name="arch" type="xml">
            	<tree colors="darkred:status=='fail';darkgreen:status=='success'" create="false" edit="false" string="Import" version="7.0">
               		<field name="create_date" />
               		<field name="imported_document_ids" />
               		<field name="status" invisible="1" />
                </tree>
        	</field>
		</record>
	    
	    <!-- Actions -->
		<record model="ir.actions.act_window" id="action_bss_qrcode_import_form">
	    	<field name="name">Import</field>
	        <field name="res_model">bss_qrcode.import</field>
	        <field name="view_mode">tree,form</field>
	    </record>
	    
	    <!-- Menu -->
	    <menuitem name="QR Code"  id="base.menu_base_qrcode"/>
		<menuitem name="QR Code" id="base.menu_module_qrcode" parent="base.menu_base_qrcode"/>
		<menuitem action="action_bss_qrcode_import_form" id="base.action_bss_qrcode_import" parent="base.menu_module_qrcode"/>

	</data>
</openerp>