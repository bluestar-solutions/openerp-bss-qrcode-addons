<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<!-- Form view -->
		<record model="ir.ui.view" id="view_bss_qrcode_imported_document_form">
	        <field name="name">Imported document</field>
	        <field name="model">bss_qrcode.imported_document</field>
	        <field name="arch" type="xml">
	        	<form create="false" edit="false" string="Imported document" version="7.0">        	
		        	<sheet>
		        		<label for="filename"/>
	               		<field name="filename" />
	               		<label for="import_id"/>
	               		<field name="import_id" />
	               		<label for="status"/>
						<field name="status" />
						<label for="message"/>			               		
	               		<field name="message" />
	               		<field name="qrcode_create_date" />
	               		<label for="oe_object"/>
	               		<field name="oe_object" />
	               		<label for="report"/>
	               		<field name="report" />
					</sheet>
				</form>
	        </field>
    	</record>
    
    	<!-- Tree view -->
		<record model="ir.ui.view" id="view_bss_qrcode_imported_document_tree">
	        <field name="name">Imported document</field>
	        <field name="model">bss_qrcode.imported_document</field>
            <field name="arch" type="xml">
            	<tree colors="darkgreen:status=='success';darkred:status=='fail';darkblue:status=='not_found'" create="false" edit="false" string="Imported document" version="7.0">
               		<field name="filename" />
               		<field name="import_id" />
					<field name="status" />					               		
               		<field name="message" />
               		<field name="qrcode_create_date" />
               		<field name="oe_object" />
               		<field name="report" />
                </tree>
        	</field>
		</record>
	    
	    <!-- Actions -->
		<record model="ir.actions.act_window" id="action_bss_qrcode_imported_document_form">
	    	<field name="name">Imported document</field>
	        <field name="res_model">bss_qrcode.imported_document</field>
	        <field name="view_mode">tree,form</field>
	    </record>

	</data>
</openerp>